@model List<BusinessLayer.ViewModels.TestDriveViewModel>

@{
    ViewData["Title"] = "Quản lý Lịch hẹn Lái thử";
}

<div class="container-fluid">
    <h2 class="mb-4">Quản lý Lịch hẹn Lái thử</h2>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Đại lý</label>
                        <select name="dealerId" class="form-select">
                            <option value="">-- Tất cả đại lý --</option>
                            @foreach (var dealer in ViewBag.Dealers as List<BusinessLayer.ViewModels.DealerViewModel>)
                            {
                                <option value="@dealer.Id" selected="@(ViewBag.SelectedDealerId == dealer.Id)">
                                    @dealer.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Chờ xác nhận</option>
                            <option value="Confirmed" selected="@(ViewBag.SelectedStatus == "Confirmed")">Đã xác nhận</option>
                            <option value="Successfully" selected="@(ViewBag.SelectedStatus == "Successfully")">Thành công</option>
                            <option value="Failed" selected="@(ViewBag.SelectedStatus == "Failed")">Thất bại</option>
                            <option value="Canceled" selected="@(ViewBag.SelectedStatus == "Canceled")">Đã hủy</option>
                        </select>
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Thời gian</th>
                        <th>Khách hàng</th>
                        <th>Liên hệ</th>
                        <th>Sản phẩm</th>
                        <th>Đại lý</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center">Chưa có lịch hẹn nào</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var td in Model)
                        {
                            <tr>
                                <td>
                                    <div><strong>@td.ScheduledDate.ToString("dd/MM/yyyy HH:mm")</strong></div>
                                    <small class="text-muted">Đăng ký: @td.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div><strong>@(td.CustomerFullName ?? td.CustomerName)</strong></div>
                                    @if (!string.IsNullOrEmpty(td.Notes))
                                    {
                                        <small class="text-muted" title="@td.Notes">
                                            <i class="fas fa-sticky-note"></i> Có ghi chú
                                        </small>
                                    }
                                </td>
                                <td>
                                    <div>
                                        <i class="fas fa-phone"></i> @(td.CustomerPhoneNumber ?? td.CustomerPhone)
                                    </div>
                                    <small class="text-muted">
                                        <i class="fas fa-envelope"></i> @(td.CustomerEmailAddress ?? td.CustomerEmail)
                                    </small>
                                </td>
                                <td>@td.ProductName</td>
                                <td>@td.DealerName</td>
                                <td>
                                    @switch (td.Status)
                                    {
                                        case BusinessLayer.Enums.TestDriveStatus.Pending:
                                            <span class="badge bg-warning">Chờ xác nhận</span>
                                            break;
                                        case BusinessLayer.Enums.TestDriveStatus.Confirmed:
                                            <span class="badge bg-info">Đã xác nhận</span>
                                            break;
                                        case BusinessLayer.Enums.TestDriveStatus.Successfully:
                                            <span class="badge bg-success">Thành công</span>
                                            break;
                                        case BusinessLayer.Enums.TestDriveStatus.Failed:
                                            <span class="badge bg-danger">Thất bại</span>
                                            break;
                                        case BusinessLayer.Enums.TestDriveStatus.Canceled:
                                            <span class="badge bg-secondary">Đã hủy</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@td.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                    
                                    @if (td.Status == BusinessLayer.Enums.TestDriveStatus.Pending)
                                    {
                                        <form asp-action="Confirm" asp-route-id="@td.Id" method="post" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="fas fa-check"></i> Xác nhận
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

