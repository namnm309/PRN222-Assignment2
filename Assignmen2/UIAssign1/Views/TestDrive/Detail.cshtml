@model DataAccessLayer.Entities.TestDrive

@{
    ViewData["Title"] = "Chi tiết Lịch hẹn Lái thử";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3><i class="fas fa-calendar-check"></i> Chi tiết Lịch hẹn Lái thử</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Msg"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Msg"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-primary">Thông tin Lịch hẹn</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%"><strong>Thời gian hẹn:</strong></td>
                                    <td>@Model.ScheduledDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày tạo:</strong></td>
                                    <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Trạng thái:</strong></td>
                                    <td>
                                        @switch (Model.Status)
                                        {
                                            case DataAccessLayer.Enum.TestDriveStatus.Pending:
                                                <span class="badge bg-warning">Chờ xác nhận</span>
                                                break;
                                            case DataAccessLayer.Enum.TestDriveStatus.Confirmed:
                                                <span class="badge bg-info">Đã xác nhận</span>
                                                break;
                                            case DataAccessLayer.Enum.TestDriveStatus.Successfully:
                                                <span class="badge bg-success">Thành công</span>
                                                break;
                                            case DataAccessLayer.Enum.TestDriveStatus.Failed:
                                                <span class="badge bg-danger">Thất bại</span>
                                                break;
                                            case DataAccessLayer.Enum.TestDriveStatus.Canceled:
                                                <span class="badge bg-secondary">Đã hủy</span>
                                                break;
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Sản phẩm</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%"><strong>Tên xe:</strong></td>
                                    <td>@Model.Product?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>SKU:</strong></td>
                                    <td>@Model.Product?.Sku</td>
                                </tr>
                                <tr>
                                    <td><strong>Giá:</strong></td>
                                    <td>@Model.Product?.Price.ToString("N0") VNĐ</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-primary">Thông tin Khách hàng</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%"><strong>Họ tên:</strong></td>
                                    <td>@(Model.Customer?.FullName ?? Model.CustomerName)</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>
                                        <a href="mailto:@(Model.Customer?.Email ?? Model.CustomerEmail)">
                                            @(Model.Customer?.Email ?? Model.CustomerEmail)
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>SĐT:</strong></td>
                                    <td>
                                        <a href="tel:@(Model.Customer?.PhoneNumber ?? Model.CustomerPhone)">
                                            @(Model.Customer?.PhoneNumber ?? Model.CustomerPhone)
                                        </a>
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Notes))
                                {
                                    <tr>
                                        <td><strong>Ghi chú:</strong></td>
                                        <td>@Model.Notes</td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-primary">Đại lý</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td width="40%"><strong>Tên đại lý:</strong></td>
                                    <td>@Model.Dealer?.Name</td>
                                </tr>
                                <tr>
                                    <td><strong>Địa chỉ:</strong></td>
                                    <td>@Model.Dealer?.Address</td>
                                </tr>
                                <tr>
                                    <td><strong>SĐT:</strong></td>
                                    <td>@Model.Dealer?.Phone</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>

                        <div>
                            @if (Model.Status == DataAccessLayer.Enum.TestDriveStatus.Pending)
                            {
                                <form asp-action="Confirm" asp-route-id="@Model.Id" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check"></i> Xác nhận lịch hẹn
                                    </button>
                                </form>
                                <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn hủy lịch hẹn này?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fas fa-times"></i> Hủy
                                    </button>
                                </form>
                            }
                            else if (Model.Status == DataAccessLayer.Enum.TestDriveStatus.Confirmed)
                            {
                                <form asp-action="Complete" asp-route-id="@Model.Id" asp-route-success="true" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check-circle"></i> Lái thử thành công
                                    </button>
                                </form>
                                <form asp-action="Complete" asp-route-id="@Model.Id" asp-route-success="false" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning">
                                        <i class="fas fa-exclamation-circle"></i> Lái thử thất bại
                                    </button>
                                </form>
                            }
                            else if (Model.Status == DataAccessLayer.Enum.TestDriveStatus.Successfully || Model.Status == DataAccessLayer.Enum.TestDriveStatus.Failed)
                            {
                                <!-- Nút tạo khách hàng chỉ hiển thị cho Dealer Staff/Manager -->
                                @if (ViewBag.UserRole == DataAccessLayer.Enum.UserRole.DealerStaff || ViewBag.UserRole == DataAccessLayer.Enum.UserRole.DealerManager)
                                {
                                    <a href="@Url.Action("CreateFromTestDrive", "CustomerManagement", new { 
                                        fullName = Model.Customer?.FullName ?? Model.CustomerName,
                                        email = Model.Customer?.Email ?? Model.CustomerEmail,
                                        phoneNumber = Model.Customer?.PhoneNumber ?? Model.CustomerPhone,
                                        address = ""
                                    })" class="btn btn-primary">
                                        <i class="fas fa-user-plus"></i> Tạo khách hàng từ đây
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

