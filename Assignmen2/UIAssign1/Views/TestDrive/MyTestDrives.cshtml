@model List<DataAccessLayer.Entities.TestDrive>

@{
    ViewData["Title"] = "Lịch hẹn Lái thử của tôi";
}

<div class="container-fluid">
    <h2 class="mb-4">Lịch hẹn Lái thử của tôi</h2>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Thời gian hẹn</th>
                        <th>Sản phẩm</th>
                        <th>Đại lý</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                Bạn chưa có lịch hẹn lái thử nào.
                                <br />
                                <a asp-controller="Home" asp-action="All" class="btn btn-primary mt-2">
                                    <i class="fas fa-car"></i> Xem sản phẩm
                                </a>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var td in Model)
                        {
                            <tr>
                                <td>
                                    <div><strong>@td.ScheduledDate.ToString("dd/MM/yyyy HH:mm")</strong></div>
                                    <small class="text-muted">Đặt ngày: @td.CreatedAt.ToString("dd/MM/yyyy")</small>
                                </td>
                                <td>
                                    <div><strong>@td.Product?.Name</strong></div>
                                    <small class="text-muted">SKU: @td.Product?.Sku</small>
                                </td>
                                <td>
                                    <div>@td.Dealer?.Name</div>
                                    <small class="text-muted">@td.Dealer?.Address</small>
                                </td>
                                <td>
                                    @switch (td.Status)
                                    {
                                        case DataAccessLayer.Enum.TestDriveStatus.Pending:
                                            <span class="badge bg-warning">Chờ xác nhận</span>
                                            break;
                                        case DataAccessLayer.Enum.TestDriveStatus.Confirmed:
                                            <span class="badge bg-info">Đã xác nhận</span>
                                            break;
                                        case DataAccessLayer.Enum.TestDriveStatus.Successfully:
                                            <span class="badge bg-success">Thành công</span>
                                            break;
                                        case DataAccessLayer.Enum.TestDriveStatus.Failed:
                                            <span class="badge bg-danger">Thất bại</span>
                                            break;
                                        case DataAccessLayer.Enum.TestDriveStatus.Canceled:
                                            <span class="badge bg-secondary">Đã hủy</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@td.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                    
                                    @if (td.Status == DataAccessLayer.Enum.TestDriveStatus.Pending || td.Status == DataAccessLayer.Enum.TestDriveStatus.Confirmed)
                                    {
                                        <form asp-action="Cancel" asp-route-id="@td.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn hủy lịch hẹn này?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i> Hủy
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

