@model List<BusinessLayer.ViewModels.OrderCreateViewModel>

@{
    ViewData["Title"] = "Quản lý Đơn hàng";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản lý Đơn hàng</h2>
        <a asp-action="CreateQuotation" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo báo giá mới
        </a>
    </div>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }


    <!-- Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    @if (ViewBag.UserRole == DataAccessLayer.Enum.UserRole.Admin || ViewBag.UserRole == DataAccessLayer.Enum.UserRole.EVMStaff)
                    {
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Đại lý</label>
                            <select name="dealerId" class="form-select">
                                <option value="">-- Tất cả đại lý --</option>
                                @foreach (var dealer in ViewBag.Dealers as List<DataAccessLayer.Entities.Dealer>)
                                {
                                    <option value="@dealer.Id" selected="@(ViewBag.SelectedDealerId == dealer.Id)">
                                        @dealer.Name
                                    </option>
                                }
                            </select>
                        </div>
                    }

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Trạng thái</label>
                        <select name="status" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="Draft" selected="@(ViewBag.SelectedStatus == "Draft")">Báo giá</option>
                            <option value="Confirmed" selected="@(ViewBag.SelectedStatus == "Confirmed")">Đã xác nhận</option>
                            <option value="Paid" selected="@(ViewBag.SelectedStatus == "Paid")">Đã thanh toán</option>
                            <option value="Delivered" selected="@(ViewBag.SelectedStatus == "Delivered")">Đã giao xe</option>
                            <option value="Cancelled" selected="@(ViewBag.SelectedStatus == "Cancelled")">Đã hủy</option>
                        </select>
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Order List -->
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Số đơn</th>
                        <th>Khách hàng</th>
                        <th>Sản phẩm</th>
                        <th>Giá bán</th>
                        <th>Giảm giá</th>
                        <th>Thành tiền</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="9" class="text-center">Chưa có đơn hàng nào</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>@order.OrderNumber</strong></td>
                                <td>@order.CustomerName</td>
                                <td>@order.ProductName</td>
                                <td>@order.Price.ToString("N0") VNĐ</td>
                                <td>@order.Discount.ToString("N0") VNĐ</td>
                                <td><strong>@order.FinalAmount.ToString("N0") VNĐ</strong></td>
                                <td>
                                    @switch (order.Status)
                                    {
                                        case "Draft":
                                            <span class="badge bg-secondary">Báo giá</span>
                                            break;
                                        case "Confirmed":
                                            <span class="badge bg-info">Đã xác nhận</span>
                                            break;
                                        case "Paid":
                                            <span class="badge bg-success">Đã thanh toán</span>
                                            break;
                                        case "Delivered":
                                            <span class="badge bg-primary">Đã giao xe</span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                    }
                                </td>
                                <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-eye"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

