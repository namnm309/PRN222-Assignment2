@model DataAccessLayer.Entities.Customer
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "_DashboardLayout";
    var orders = ViewBag.Orders as List<DataAccessLayer.Entities.Order> ?? new List<DataAccessLayer.Entities.Order>();
    var testDrives = ViewBag.TestDrives as List<DataAccessLayer.Entities.TestDrive> ?? new List<DataAccessLayer.Entities.TestDrive>();
    var totalSpent = ViewBag.TotalSpent as decimal? ?? 0;
    var totalOrders = ViewBag.TotalOrders as int? ?? 0;
}

<div class="dashboard-content">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Khách hàng</a></li>
            <li class="breadcrumb-item active">Chi tiết</li>
        </ol>
    </nav>

    @if (TempData["Msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Customer Info Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-user-circle me-2"></i>Thông tin khách hàng
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3 text-center border-end">
                    <div class="avatar-large bg-primary text-white mx-auto mb-3">
                        @Model.FullName.Substring(0, 1).ToUpper()
                    </div>
                    <h5 class="fw-bold">@Model.FullName</h5>
                    <p class="text-muted small mb-2">ID: @Model.Id.ToString().Substring(0, 8).ToUpper()</p>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i>Hoạt động
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">
                            <i class="fas fa-times-circle me-1"></i>Không hoạt động
                        </span>
                    }
                </div>
                <div class="col-md-9">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Số điện thoại</label>
                            <div class="fw-semibold">
                                <i class="fas fa-phone text-primary me-2"></i>@Model.PhoneNumber
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Email</label>
                            <div class="fw-semibold">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <i class="fas fa-envelope text-info me-2"></i>
                                    <span>@Model.Email</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small mb-1">Địa chỉ</label>
                            <div class="fw-semibold">
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                    <span>@Model.Address</span>
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Ngày tạo</label>
                            <div class="fw-semibold">
                                <i class="fas fa-calendar text-success me-2"></i>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small mb-1">Cập nhật lần cuối</label>
                            <div class="fw-semibold">
                                <i class="fas fa-clock text-warning me-2"></i>@Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Row -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-success text-white">
                <div class="card-body">
                    <h6 class="opacity-75 mb-1">Tổng đơn hàng</h6>
                    <h3 class="fw-bold mb-0">@totalOrders</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-primary text-white">
                <div class="card-body">
                    <h6 class="opacity-75 mb-1">Tổng chi tiêu</h6>
                    <h3 class="fw-bold mb-0">@totalSpent.ToString("N0") VNĐ</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 bg-info text-white">
                <div class="card-body">
                    <h6 class="opacity-75 mb-1">Lịch lái thử</h6>
                    <h3 class="fw-bold mb-0">@testDrives.Count</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders History -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-shopping-cart me-2"></i>Lịch sử đơn hàng
                <span class="badge bg-primary ms-2">@orders.Count</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (orders.Count == 0)
            {
                <div class="text-center py-4">
                    <i class="fas fa-shopping-bag fa-2x text-muted mb-2"></i>
                    <p class="text-muted mb-0">Khách hàng chưa có đơn hàng nào</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Sản phẩm</th>
                                <th>Đại lý</th>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Ngày đặt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in orders)
                            {
                                <tr>
                                    <td>
                                        <code>@order.Id.ToString().Substring(0, 8).ToUpper()</code>
                                    </td>
                                    <td>@order.Product?.Name</td>
                                    <td>@order.Dealer?.Name</td>
                                    <td>1</td>
                                    <td class="fw-bold text-primary">@order.FinalAmount.ToString("N0") VNĐ</td>
                                    <td>
                                        @if (order.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Hoàn thành</span>
                                        }
                                        else if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning">Chờ xử lý</span>
                                        }
                                        else if (order.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Đã hủy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@order.CreatedAt.ToString("dd/MM/yyyy")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Test Drives History -->
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-calendar-check me-2"></i>Lịch sử lái thử
                <span class="badge bg-info ms-2">@testDrives.Count</span>
            </h5>
        </div>
        <div class="card-body p-0">
            @if (testDrives.Count == 0)
            {
                <div class="text-center py-4">
                    <i class="fas fa-car fa-2x text-muted mb-2"></i>
                    <p class="text-muted mb-0">Khách hàng chưa đăng ký lái thử</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Mã lịch hẹn</th>
                                <th>Sản phẩm</th>
                                <th>Đại lý</th>
                                <th>Ngày hẹn</th>
                                <th>Trạng thái</th>
                                <th>Ghi chú</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var td in testDrives)
                            {
                                <tr>
                                    <td>
                                        <code>@td.Id.ToString().Substring(0, 8).ToUpper()</code>
                                    </td>
                                    <td>@td.Product?.Name</td>
                                    <td>@td.Dealer?.Name</td>
                                    <td>
                                        <small>@td.ScheduledDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (td.Status == DataAccessLayer.Enum.TestDriveStatus.Successfully)
                                        {
                                            <span class="badge bg-success">Thành công</span>
                                        }
                                        else if (td.Status == DataAccessLayer.Enum.TestDriveStatus.Failed)
                                        {
                                            <span class="badge bg-danger">Thất bại</span>
                                        }
                                        else if (td.Status == DataAccessLayer.Enum.TestDriveStatus.Confirmed)
                                        {
                                            <span class="badge bg-info">Đã xác nhận</span>
                                        }
                                        else if (td.Status == DataAccessLayer.Enum.TestDriveStatus.Pending)
                                        {
                                            <span class="badge bg-warning">Chờ xác nhận</span>
                                        }
                                        else if (td.Status == DataAccessLayer.Enum.TestDriveStatus.Canceled)
                                        {
                                            <span class="badge bg-secondary">Đã hủy</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@td.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@(td.Notes ?? "-")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Actions -->
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>
</div>

<style>
    .avatar-large {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 2.5rem;
    }
</style>

