@model List<DataAccessLayer.Entities.Brand>

@{
    ViewData["Title"] = "Quản lý Thương hiệu";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Quản lý Thương hiệu</h2>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm Thương hiệu
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tên Thương hiệu</th>
                        <th>Quốc gia</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">Chưa có thương hiệu nào</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var brand in Model)
                        {
                            <tr>
                                <td>@brand.Name</td>
                                <td>@brand.Country</td>
                                <td>@(string.IsNullOrEmpty(brand.Description) ? "N/A" : (brand.Description.Length > 50 ? brand.Description.Substring(0, 50) + "..." : brand.Description))</td>
                                <td>
                                    @if (brand.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@brand.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa thương hiệu này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


