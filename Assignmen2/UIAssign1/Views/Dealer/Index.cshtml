@model List<DataAccessLayer.Entities.Dealer>

@{
    ViewData["Title"] = "Quản lý Đại lý";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2>Quản lý Đại lý</h2>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm Đại lý
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã đại lý</th>
                        <th>Tên đại lý</th>
                        <th>Liên hệ</th>
                        <th>Địa chỉ</th>
                        <th>Khu vực</th>
                        <th>Hạn mức TD</th>
                        <th>Công nợ</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="9" class="text-center">Chưa có đại lý nào</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var dealer in Model)
                        {
                            <tr>
                                <td>@dealer.DealerCode</td>
                                <td>@dealer.Name</td>
                                <td>
                                    <div>@dealer.ContactPerson</div>
                                    <small class="text-muted">@dealer.Phone</small>
                                </td>
                                <td>@dealer.City, @dealer.Province</td>
                                <td>@(dealer.Region?.Name ?? "N/A")</td>
                                <td>@dealer.CreditLimit.ToString("N0") VNĐ</td>
                                <td>
                                    @if (dealer.OutstandingDebt > dealer.CreditLimit * 0.8m)
                                    {
                                        <span class="text-danger fw-bold">@dealer.OutstandingDebt.ToString("N0") VNĐ</span>
                                    }
                                    else
                                    {
                                        <span>@dealer.OutstandingDebt.ToString("N0") VNĐ</span>
                                    }
                                </td>
                                <td>
                                    @if (dealer.Status == "Active" && dealer.IsActive)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else if (dealer.Status == "Suspended")
                                    {
                                        <span class="badge bg-warning">Tạm ngừng</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@dealer.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@dealer.Id" method="post" style="display:inline;" onsubmit="return confirm('Bạn có chắc muốn xóa đại lý này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

