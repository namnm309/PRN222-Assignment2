@model List<DataAccessLayer.Entities.Order>
@{
    ViewData["Title"] = "Báo cáo Công nợ";
    Layout = "_DashboardLayout";
}
<div class="container-fluid">
    <h2 class="mb-4"><i class="fas fa-file-invoice-dollar me-2"></i>Báo cáo Công nợ Khách hàng</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Khách hàng</label>
                        <select name="customerId" class="form-select">
                            <option value="">-- Tất cả khách hàng --</option>
                            @foreach (var customer in ViewBag.Customers as List<DataAccessLayer.Entities.Customer>)
                            {
                                <option value="@customer.Id" selected="@(ViewBag.CustomerId == customer.Id)">@customer.FullName (@customer.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Trạng thái thanh toán</label>
                        <select name="paymentStatus" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="Pending" selected="@(ViewBag.PaymentStatus == "Pending")">Chờ thanh toán</option>
                            <option value="Partial" selected="@(ViewBag.PaymentStatus == "Partial")">Thanh toán một phần</option>
                            <option value="Overdue" selected="@(ViewBag.PaymentStatus == "Overdue")">Quá hạn</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search me-1"></i> Lọc</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Tổng Công nợ: <span class="text-danger fw-bold">@(((decimal)ViewBag.TotalDebt).ToString("N0")) VNĐ</span></h4>
        </div>
    </div>

    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Sản phẩm</th>
                        <th>Ngày đặt</th>
                        <th>Hạn TT</th>
                        <th>Tổng tiền</th>
                        <th>TT thanh toán</th>
                        <th>Trạng thái đơn</th>
                    </tr>
                </thead>
                <tbody>
                @if (!Model.Any())
                {
                    <tr><td colspan="8" class="text-center">Không có công nợ</td></tr>
                }
                else
                {
                    foreach (var order in Model)
                    {
                        var overdue = order.PaymentDueDate.HasValue && order.PaymentDueDate.Value < DateTime.Now;
                        <tr class="@(overdue?"table-danger":"")">
                            <td>@order.OrderNumber</td>
                            <td>@order.Customer?.FullName<br/><small>@order.Customer?.PhoneNumber</small></td>
                            <td>@order.Product?.Name</td>
                            <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                            <td>@order.PaymentDueDate?.ToString("dd/MM/yyyy")</td>
                            <td class="fw-bold">@(((decimal)order.FinalAmount).ToString("N0"))</td>
                            <td>
                                @switch(order.PaymentStatus)
                                {
                                    case "Pending": <span class="badge bg-warning">Chờ thanh toán</span>; break;
                                    case "Partial": <span class="badge bg-info">Một phần</span>; break;
                                    case "Overdue": <span class="badge bg-danger">Quá hạn</span>; break;
                                    default: <span class="badge bg-secondary">@order.PaymentStatus</span>; break;
                                }
                            </td>
                            <td>@order.Status</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
