@model DataAccessLayer.Entities.Product

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <!-- Product Image Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="row g-0">
                    <div class="col-md-6">
                        <div class="p-4">
                            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" style="width: 100%; height: 400px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="placeholder-img d-flex align-items-center justify-content-center text-muted rounded" style="width: 100%; height: 400px; background-color: #f8f9fa; border: 2px dashed #dee2e6;">
                                    <div class="text-center">
                                        <i class="fas fa-car fa-4x mb-3"></i>
                                        <h5>@Model.Name</h5>
                                        <p class="text-muted">Hình ảnh sản phẩm</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card-body h-100 d-flex flex-column">
                            <h2 class="mb-3">@Model.Name</h2>
                            <p class="text-muted">SKU: @Model.Sku</p>
                            
                            @if (Model.Brand != null)
                            {
                                <p><strong>Hãng:</strong> @Model.Brand.Name</p>
                            }
                            
                            <h3 class="text-primary my-3">@Model.Price.ToString("N0") VNĐ</h3>
                            
                            <div class="mb-3">
                                <strong>Mô tả:</strong>
                                <p>@Model.Description</p>
                            </div>
                            

                            @if (Model.IsActive)
                            {
                                <div class="mt-auto">
                                    <span class="badge bg-success mb-2">Đang kinh doanh</span>
                                </div>
                            }
                            else
                            {
                                <div class="mt-auto">
                                    <span class="badge bg-secondary mb-2">Ngừng kinh doanh</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Test Drive Registration Section -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            @if (ViewBag.Dealers != null)
            {
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4><i class="fas fa-calendar-check"></i> Đăng ký Lái thử MIỄN PHÍ</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-8">
                                <p class="text-muted mb-3">
                                    <i class="fas fa-info-circle"></i> 
                                    Điền thông tin bên dưới để đặt lịch lái thử. Chúng tôi sẽ liên hệ xác nhận với bạn sớm nhất.
                                </p>
                                
                                <form asp-controller="TestDrive" asp-action="Create" method="get">
                                    <input type="hidden" name="productId" value="@Model.Id" />

                                    <div class="mb-3">
                                        <label class="form-label">Chọn Đại lý <span class="text-danger">*</span></label>
                                        <select name="dealerId" class="form-select" required>
                                            <option value="">-- Chọn đại lý để lái thử --</option>
                                            @foreach (var dealer in ViewBag.Dealers as List<DataAccessLayer.Entities.Dealer>)
                                            {
                                                <option value="@dealer.Id">@dealer.Name - @dealer.Address</option>
                                            }
                                        </select>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-calendar-plus"></i> Đăng ký lái thử ngay
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-4">
                                <div class="bg-light rounded p-3">
                                    <h6 class="fw-bold mb-2">Quy trình lái thử:</h6>
                                    <ol class="mb-0 ps-3 small">
                                        <li>Chọn đại lý và điền thông tin</li>
                                        <li>Chọn thời gian phù hợp</li>
                                        <li>Chúng tôi liên hệ xác nhận</li>
                                        <li>Đến đại lý và trải nghiệm xe</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a asp-controller="Home" asp-action="All" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>

