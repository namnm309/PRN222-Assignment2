@{
    ViewData["Title"] = "Báo cáo Doanh số Đại lý";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="fas fa-chart-line text-primary me-2"></i>Báo cáo Doanh số Đại lý
            </h2>
            <p class="text-muted mb-0">Tổng quan doanh số và hiệu suất bán hàng</p>
        </div>
        <div>
            <a href="@Url.Action("SalesByEmployee")" class="btn btn-outline-primary me-2">
                <i class="fas fa-user-tie me-1"></i>Doanh số theo nhân viên
            </a>
            <a href="@Url.Action("TopSellingVehicles")" class="btn btn-outline-success">
                <i class="fas fa-car me-1"></i>Xe bán chạy nhất
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Tổng quan doanh số -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-primary rounded-circle p-3 me-3">
                            <i class="fas fa-calendar-alt text-white fs-4"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Doanh số tháng @ViewBag.CurrentMonth/@ViewBag.CurrentYear</h5>
                            <p class="text-muted mb-0">Tổng doanh thu</p>
                        </div>
                    </div>
                    <h2 class="text-primary fw-bold">@(((decimal)ViewBag.MonthlyTotal).ToString("N0")) VNĐ</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-success">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-success rounded-circle p-3 me-3">
                            <i class="fas fa-chart-line text-white fs-4"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Doanh số năm @ViewBag.CurrentYear</h5>
                            <p class="text-muted mb-0">Tổng doanh thu</p>
                        </div>
                    </div>
                    <h2 class="text-success fw-bold">@(((decimal)ViewBag.YearlyTotal).ToString("N0")) VNĐ</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Top nhân viên bán hàng -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-trophy me-2"></i>Top Nhân viên Bán hàng
                    </h5>
                    <small>Tháng @ViewBag.CurrentMonth/@ViewBag.CurrentYear</small>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopEmployees != null && ((List<dynamic>)ViewBag.TopEmployees).Any())
                    {
                        <div class="list-group list-group-flush">
                            @{
                                int rank = 1;
                            }
                            @foreach (var employee in ViewBag.TopEmployees as List<dynamic>)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-primary rounded-pill me-3">@rank</span>
                                        <div>
                                            <h6 class="mb-1">@employee.EmployeeName</h6>
                                            <small class="text-muted">@employee.OrderCount đơn hàng</small>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-bold text-success">@(((decimal)employee.TotalSales).ToString("N0")) VNĐ</span>
                                    </div>
                                </div>
                                rank++;
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-chart-bar fa-3x mb-3"></i>
                            <p>Chưa có dữ liệu bán hàng</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Top xe bán chạy -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-car me-2"></i>Top Xe Bán chạy
                    </h5>
                    <small>Tháng @ViewBag.CurrentMonth/@ViewBag.CurrentYear</small>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopVehicles != null && ((List<dynamic>)ViewBag.TopVehicles).Any())
                    {
                        <div class="list-group list-group-flush">
                            @{
                                int rank = 1;
                            }
                            @foreach (var vehicle in ViewBag.TopVehicles as List<dynamic>)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div class="d-flex align-items-center">
                                        <span class="badge bg-success rounded-pill me-3">@rank</span>
                                        <div>
                                            <h6 class="mb-1">@vehicle.ProductName</h6>
                                            <small class="text-muted">SKU: @vehicle.ProductSku</small>
                                        </div>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-bold text-success">@vehicle.OrderCount xe</span>
                                        <br>
                                        <small class="text-muted">@(((decimal)vehicle.TotalSales).ToString("N0")) VNĐ</small>
                                    </div>
                                </div>
                                rank++;
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-car fa-3x mb-3"></i>
                            <p>Chưa có dữ liệu bán xe</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt me-2"></i>Thao tác nhanh
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("SalesByEmployee", new { period = "monthly", year = ViewBag.CurrentYear, month = ViewBag.CurrentMonth })" 
                               class="btn btn-outline-primary w-100">
                                <i class="fas fa-user-tie d-block mb-2"></i>
                                Doanh số tháng này
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("SalesByEmployee", new { period = "yearly", year = ViewBag.CurrentYear })" 
                               class="btn btn-outline-success w-100">
                                <i class="fas fa-chart-line d-block mb-2"></i>
                                Doanh số năm nay
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("TopSellingVehicles", new { period = "monthly", year = ViewBag.CurrentYear, month = ViewBag.CurrentMonth })" 
                               class="btn btn-outline-warning w-100">
                                <i class="fas fa-car d-block mb-2"></i>
                                Xe bán chạy tháng
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("TopSellingVehicles", new { period = "yearly", year = ViewBag.CurrentYear })" 
                               class="btn btn-outline-info w-100">
                                <i class="fas fa-trophy d-block mb-2"></i>
                                Xe bán chạy năm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
