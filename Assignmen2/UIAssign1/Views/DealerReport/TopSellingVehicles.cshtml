@model List<dynamic>

@{
    ViewData["Title"] = "Báo cáo Xe Bán chạy nhất";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="fas fa-car text-success me-2"></i>Báo cáo Xe Bán chạy nhất
            </h2>
            <p class="text-muted mb-0">Thống kê sản phẩm bán chạy nhất</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
            <a href="@Url.Action("SalesByEmployee")" class="btn btn-outline-primary">
                <i class="fas fa-user-tie me-1"></i>Doanh số theo nhân viên
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="TopSellingVehicles">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Kỳ báo cáo</label>
                        <select name="period" class="form-select">
                            <option value="monthly" selected="@(ViewBag.Period == "monthly")">Theo tháng</option>
                            <option value="quarterly" selected="@(ViewBag.Period == "quarterly")">Theo quý</option>
                            <option value="yearly" selected="@(ViewBag.Period == "yearly")">Theo năm</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Năm</label>
                        <select name="year" class="form-select">
                            @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                            {
                                <option value="@i" selected="@(ViewBag.Year == i)">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3" id="monthField" style="@(ViewBag.Period == "monthly" ? "" : "display:none;")">
                        <label class="form-label">Tháng</label>
                        <select name="month" class="form-select">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(ViewBag.Month == i)">Tháng @i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3" id="quarterField" style="@(ViewBag.Period == "quarterly" ? "" : "display:none;")">
                        <label class="form-label">Quý</label>
                        <select name="quarter" class="form-select">
                            <option value="1" selected="@(ViewBag.Quarter == 1)">Quý 1</option>
                            <option value="2" selected="@(ViewBag.Quarter == 2)">Quý 2</option>
                            <option value="3" selected="@(ViewBag.Quarter == 3)">Quý 3</option>
                            <option value="4" selected="@(ViewBag.Quarter == 4)">Quý 4</option>
                        </select>
                    </div>
                    <div class="col-md-1 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Top Vehicles List -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            int rank = 1;
            @foreach (var vehicle in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 @(rank <= 3 ? "border-warning" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center @(rank <= 3 ? "bg-warning text-dark" : "bg-light")">
                            <div class="d-flex align-items-center">
                                @if (rank == 1)
                                {
                                    <i class="fas fa-trophy text-warning me-2"></i>
                                }
                                else if (rank == 2)
                                {
                                    <i class="fas fa-medal text-secondary me-2"></i>
                                }
                                else if (rank == 3)
                                {
                                    <i class="fas fa-award text-warning me-2"></i>
                                }
                                else
                                {
                                    <span class="badge bg-primary rounded-pill me-2">@rank</span>
                                }
                                <h6 class="mb-0">@vehicle.ProductName</h6>
                            </div>
                            <span class="badge @(rank <= 3 ? "bg-dark" : "bg-primary")">#@rank</span>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h4 class="text-success fw-bold mb-1">@vehicle.OrderCount</h4>
                                        <small class="text-muted">Xe đã bán</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h4 class="text-primary fw-bold mb-1">@(((decimal)vehicle.TotalSales).ToString("N0"))</h4>
                                    <small class="text-muted">VNĐ</small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <small class="text-muted d-block">SKU: @vehicle.ProductSku</small>
                                <small class="text-muted">Giá TB: @(((decimal)vehicle.AveragePrice).ToString("N0")) VNĐ</small>
                            </div>
                            <div class="progress mb-2" style="height: 8px;">
                                @{
                                    var maxSales = Model.Max(v => v.TotalSales);
                                    var percentage = (double)vehicle.TotalSales / (double)maxSales * 100;
                                }
                                <div class="progress-bar @(rank <= 3 ? "bg-warning" : "bg-success")" 
                                     style="width: @(percentage.ToString("F1"))%"></div>
                            </div>
                            <small class="text-muted">@(percentage.ToString("F1"))% so với xe bán chạy nhất</small>
                        </div>
                    </div>
                </div>
                rank++;
            }
        }
        else
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-car fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có dữ liệu bán xe</h5>
                        <p class="text-muted">Không có dữ liệu bán hàng trong kỳ này</p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Summary Statistics -->
    @if (Model != null && Model.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-pie me-2"></i>Thống kê tổng quan
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-primary">@Model.Count</h4>
                                <small class="text-muted">Loại xe đã bán</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">@Model.Sum(v => v.OrderCount)</h4>
                                <small class="text-muted">Tổng số xe bán</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-warning">@(((decimal)Model.Sum(v => (decimal)v.TotalSales)).ToString("N0"))</h4>
                                <small class="text-muted">Tổng doanh thu (VNĐ)</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-info">@(((decimal)Model.Average(v => (decimal)v.AveragePrice)).ToString("N0"))</h4>
                                <small class="text-muted">Giá trung bình (VNĐ)</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    // Show/hide month/quarter fields based on period selection
    document.querySelector('select[name="period"]').addEventListener('change', function() {
        const period = this.value;
        const monthField = document.getElementById('monthField');
        const quarterField = document.getElementById('quarterField');
        
        if (period === 'monthly') {
            monthField.style.display = '';
            quarterField.style.display = 'none';
        } else if (period === 'quarterly') {
            monthField.style.display = 'none';
            quarterField.style.display = '';
        } else {
            monthField.style.display = 'none';
            quarterField.style.display = 'none';
        }
    });
</script>
