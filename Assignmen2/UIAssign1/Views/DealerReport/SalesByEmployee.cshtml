@model List<DataAccessLayer.Entities.Order>

@{
    ViewData["Title"] = "Báo cáo Doanh số theo Nhân viên";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <i class="fas fa-user-tie text-primary me-2"></i>Báo cáo Doanh số theo Nhân viên
            </h2>
            <p class="text-muted mb-0">Chi tiết doanh số của từng nhân viên</p>
        </div>
        <div>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-arrow-left me-1"></i>Quay lại
            </a>
            <a href="@Url.Action("TopSellingVehicles")" class="btn btn-outline-success">
                <i class="fas fa-car me-1"></i>Xe bán chạy nhất
            </a>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="SalesByEmployee">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Nhân viên</label>
                        <select name="employeeId" class="form-select">
                            <option value="">-- Tất cả nhân viên --</option>
                            @foreach (var employee in ViewBag.Employees as List<DataAccessLayer.Entities.Users>)
                            {
                                <option value="@employee.Id" selected="@(ViewBag.EmployeeId == employee.Id)">
                                    @employee.FullName
                                </option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Kỳ báo cáo</label>
                        <select name="period" class="form-select">
                            <option value="monthly" selected="@(ViewBag.Period == "monthly")">Theo tháng</option>
                            <option value="quarterly" selected="@(ViewBag.Period == "quarterly")">Theo quý</option>
                            <option value="yearly" selected="@(ViewBag.Period == "yearly")">Theo năm</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">Năm</label>
                        <select name="year" class="form-select">
                            @for (int i = DateTime.Now.Year; i >= DateTime.Now.Year - 5; i--)
                            {
                                <option value="@i" selected="@(ViewBag.Year == i)">@i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3" id="monthField" style="@(ViewBag.Period == "monthly" ? "" : "display:none;")">
                        <label class="form-label">Tháng</label>
                        <select name="month" class="form-select">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(ViewBag.Month == i)">Tháng @i</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-3" id="quarterField" style="@(ViewBag.Period == "quarterly" ? "" : "display:none;")">
                        <label class="form-label">Quý</label>
                        <select name="quarter" class="form-select">
                            <option value="1" selected="@(ViewBag.Quarter == 1)">Quý 1</option>
                            <option value="2" selected="@(ViewBag.Quarter == 2)">Quý 2</option>
                            <option value="3" selected="@(ViewBag.Quarter == 3)">Quý 3</option>
                            <option value="4" selected="@(ViewBag.Quarter == 4)">Quý 4</option>
                        </select>
                    </div>
                    <div class="col-md-1 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Summary Card -->
    <div class="card mb-4">
        <div class="card-body text-center">
            <h4 class="text-primary">Tổng doanh số: <span class="fw-bold">@((decimal)ViewBag.TotalSales).ToString("N0") VNĐ</span></h4>
            <p class="text-muted mb-0">@Model.Count đơn hàng</p>
        </div>
    </div>

    <!-- Sales Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Chi tiết đơn hàng
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="text-center text-muted py-5">
                    <i class="fas fa-chart-bar fa-3x mb-3"></i>
                    <p>Không có dữ liệu bán hàng trong kỳ này</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Nhân viên</th>
                                <th>Khách hàng</th>
                                <th>Sản phẩm</th>
                                <th>Ngày đặt</th>
                                <th>Giá trị</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-primary">@order.OrderNumber</span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                <i class="fas fa-user text-white small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold">@order.SalesPerson?.FullName</div>
                                                <small class="text-muted">@order.SalesPerson?.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@order.Customer?.FullName</div>
                                            <small class="text-muted">@order.Customer?.PhoneNumber</small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <div class="fw-bold">@order.Product?.Name</div>
                                            <small class="text-muted">SKU: @order.Product?.Sku</small>
                                        </div>
                                    </td>
                                    <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                    <td class="fw-bold text-success">@((decimal)order.FinalAmount).ToString("N0") VNĐ</td>
                                    <td>
                                        @if (order.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Hoàn thành</span>
                                        }
                                        else if (order.Status == "Delivered")
                                        {
                                            <span class="badge bg-primary">Đã giao hàng</span>
                                        }
                                        else if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning">Chờ xử lý</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@order.Status</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<script>
    // Show/hide month/quarter fields based on period selection
    document.querySelector('select[name="period"]').addEventListener('change', function() {
        const period = this.value;
        const monthField = document.getElementById('monthField');
        const quarterField = document.getElementById('quarterField');
        
        if (period === 'monthly') {
            monthField.style.display = '';
            quarterField.style.display = 'none';
        } else if (period === 'quarterly') {
            monthField.style.display = 'none';
            quarterField.style.display = '';
        } else {
            monthField.style.display = 'none';
            quarterField.style.display = 'none';
        }
    });
</script>
