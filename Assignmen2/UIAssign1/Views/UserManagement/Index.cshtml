@model List<BusinessLayer.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-users"></i> Quản lý tài khoản
                    </h3>
                    <div>
                        @if (userRole == "Admin")
                        {
                            <a asp-action="CreateDealerManager" class="btn btn-light">
                                <i class="fas fa-user-plus"></i> Tạo Dealer Manager
                            </a>
                        }
                        @if (userRole == "DealerManager")
                        {
                            <a asp-action="CreateDealerStaff" class="btn btn-light">
                                <i class="fas fa-user-plus"></i> Tạo Dealer Staff
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Vai trò</th>
                                    <th>Đại lý</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>
                                                <i class="fas fa-user me-2 text-primary"></i>
                                                @user.FullName
                                            </td>
                                            <td>@user.Email</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>
                                                {
                                                    var roleName = user.Role.ToString();
                                                    if (roleName == "Admin")
                                                    {
                                                        <span class="badge bg-danger">Admin</span>
                                                    }
                                                    else if (roleName == "EVMStaff")
                                                    {
                                                        <span class="badge bg-warning">EVM Staff</span>
                                                    }
                                                    else if (roleName == "DealerManager")
                                                    {
                                                        <span class="badge bg-primary">Dealer Manager</span>
                                                    }
                                                    else if (roleName == "DealerStaff")
                                                    {
                                                        <span class="badge bg-info">Dealer Staff</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">@user.Role.ToString()</span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.DealerName))
                                                {
                                                    <span class="text-primary">
                                                        <i class="fas fa-store me-1"></i>@user.DealerName
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.IsActive)
                                                {
                                                    <span class="badge bg-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Đã khóa</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-outline-primary">
                                                        <i class="fas fa-edit"></i> Sửa
                                                    </a>
                                                    @if (user.Role.ToString() == "DealerStaff" || 
                                                         (userRole == "Admin" && user.Role.ToString() != "Admin"))
                                                    {
                                                        <button type="button" class="btn btn-outline-danger" 
                                                                onclick="confirmDelete('@user.Id', '@user.FullName')">
                                                            <i class="fas fa-trash"></i> Xóa
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">
                                            <i class="fas fa-users fa-2x mb-2"></i>
                                            <p>Chưa có người dùng nào.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Xác nhận xóa
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa người dùng <strong id="deleteUserName"></strong>?</p>
                <p class="text-danger"><i class="fas fa-info-circle"></i> Tài khoản sẽ bị vô hiệu hóa và không thể đăng nhập.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" asp-action="Delete" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteUserId" name="id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId, userName) {
            document.getElementById('deleteUserId').value = userId;
            document.getElementById('deleteUserName').textContent = userName;
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
            deleteModal.show();
        }
    </script>
}

