@model List<DataAccessLayer.Entities.Order>

@{
    ViewData["Title"] = "Báo cáo Doanh số theo Nhân viên";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <h2 class="mb-4">Báo cáo Doanh số theo Nhân viên</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="SalesReportByStaff">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Nhân viên bán hàng</label>
                        <select name="salesPersonId" class="form-select">
                            <option value="">-- Tất cả nhân viên --</option>
                            @foreach (var staff in ViewBag.SalesStaff as List<DataAccessLayer.Entities.Users>)
                            {
                                <option value="@staff.Id" selected="@(ViewBag.SalesPersonId == staff.Id)">
                                    @staff.FullName (@staff.Email)
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="form-label">Đại lý</label>
                        <select name="dealerId" class="form-select">
                            <option value="">-- Tất cả đại lý --</option>
                            @foreach (var dealer in ViewBag.Dealers as List<DataAccessLayer.Entities.Dealer>)
                            {
                                <option value="@dealer.Id" selected="@(ViewBag.DealerId == dealer.Id)">
                                    @dealer.Name
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label">Kỳ báo cáo</label>
                        <select name="period" class="form-select">
                            <option value="monthly" selected="@(ViewBag.Period == "monthly")">Tháng</option>
                            <option value="quarterly" selected="@(ViewBag.Period == "quarterly")">Quý</option>
                            <option value="yearly" selected="@(ViewBag.Period == "yearly")">Năm</option>
                        </select>
                    </div>

                    <div class="col-md-2 mb-3">
                        <label class="form-label">Năm</label>
                        <input type="number" name="year" class="form-control" value="@ViewBag.Year" min="2020" max="2099" />
                    </div>

                    <div class="col-md-2 mb-3" id="monthFilter" style="@(ViewBag.Period == "monthly" ? "" : "display:none")">
                        <label class="form-label">Tháng</label>
                        <select name="month" class="form-select">
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i" selected="@(ViewBag.Month == i)">Tháng @i</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2 mb-3" id="quarterFilter" style="@(ViewBag.Period == "quarterly" ? "" : "display:none")">
                        <label class="form-label">Quý</label>
                        <select name="quarter" class="form-select">
                            @for (int i = 1; i <= 4; i++)
                            {
                                <option value="@i" selected="@(ViewBag.Quarter == i)">Quý @i</option>
                            }
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Xem báo cáo
                </button>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Tổng Doanh số: <span class="text-success">@ViewBag.TotalSales.ToString("N0") VNĐ</span></h4>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã Đơn</th>
                        <th>Nhân viên</th>
                        <th>Khách hàng</th>
                        <th>Sản phẩm</th>
                        <th>Đại lý</th>
                        <th>Ngày đặt</th>
                        <th>Giá</th>
                        <th>Giảm giá</th>
                        <th>Thành tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="10" class="text-center">Không có dữ liệu</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderNumber</td>
                                <td>@(order.SalesPerson?.FullName ?? "N/A")</td>
                                <td>@order.Customer?.FullName</td>
                                <td>@order.Product?.Name</td>
                                <td>@order.Dealer?.Name</td>
                                <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                <td>@order.Price.ToString("N0") VNĐ</td>
                                <td>@order.Discount.ToString("N0") VNĐ</td>
                                <td class="fw-bold">@order.FinalAmount.ToString("N0") VNĐ</td>
                                <td>
                                    @if (order.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Hoàn thành</span>
                                    }
                                    else if (order.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">Chờ xử lý</span>
                                    }
                                    else if (order.Status == "Canceled")
                                    {
                                        <span class="badge bg-danger">Đã hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">@order.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    document.querySelector('select[name="period"]').addEventListener('change', function() {
        const monthFilter = document.getElementById('monthFilter');
        const quarterFilter = document.getElementById('quarterFilter');
        
        if (this.value === 'monthly') {
            monthFilter.style.display = 'block';
            quarterFilter.style.display = 'none';
        } else if (this.value === 'quarterly') {
            monthFilter.style.display = 'none';
            quarterFilter.style.display = 'block';
        } else {
            monthFilter.style.display = 'none';
            quarterFilter.style.display = 'none';
        }
    });
</script>

