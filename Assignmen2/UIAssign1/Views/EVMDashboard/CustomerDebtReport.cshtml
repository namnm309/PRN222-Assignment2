@model List<DataAccessLayer.Entities.Order>

@{
    ViewData["Title"] = "Báo cáo Công nợ Khách hàng";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <h2 class="mb-4">Báo cáo Công nợ Khách hàng</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="CustomerDebtReport">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Khách hàng</label>
                        <select name="customerId" class="form-select">
                            <option value="">-- Tất cả khách hàng --</option>
                            @foreach (var customer in ViewBag.Customers as List<DataAccessLayer.Entities.Customer>)
                            {
                                <option value="@customer.Id" selected="@(ViewBag.CustomerId == customer.Id)">
                                    @customer.FullName (@customer.Email)
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label class="form-label">Trạng thái thanh toán</label>
                        <select name="paymentStatus" class="form-select">
                            <option value="">-- Tất cả --</option>
                            <option value="Pending" selected="@(ViewBag.PaymentStatus == "Pending")">Chờ thanh toán</option>
                            <option value="Partial" selected="@(ViewBag.PaymentStatus == "Partial")">Thanh toán một phần</option>
                            <option value="Overdue" selected="@(ViewBag.PaymentStatus == "Overdue")">Quá hạn</option>
                        </select>
                    </div>

                    <div class="col-md-2 mb-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Xem báo cáo
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Tổng Công nợ: <span class="text-danger">@ViewBag.TotalDebt.ToString("N0") VNĐ</span></h4>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Mã Đơn</th>
                        <th>Khách hàng</th>
                        <th>Sản phẩm</th>
                        <th>Đại lý</th>
                        <th>Ngày đặt</th>
                        <th>Hạn thanh toán</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái thanh toán</th>
                        <th>Trạng thái đơn</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="9" class="text-center">Không có công nợ</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            var isOverdue = order.PaymentDueDate.HasValue && order.PaymentDueDate.Value < DateTime.Now;
                            <tr class="@(isOverdue ? "table-danger" : "")">
                                <td>@order.OrderNumber</td>
                                <td>
                                    <div>@order.Customer?.FullName</div>
                                    <small class="text-muted">@order.Customer?.PhoneNumber</small>
                                </td>
                                <td>@order.Product?.Name</td>
                                <td>@order.Dealer?.Name</td>
                                <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @if (isOverdue)
                                    {
                                        <span class="text-danger fw-bold">
                                            @order.PaymentDueDate?.ToString("dd/MM/yyyy")
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        @order.PaymentDueDate?.ToString("dd/MM/yyyy")
                                    }
                                </td>
                                <td class="fw-bold">@order.FinalAmount.ToString("N0") VNĐ</td>
                                <td>
                                    @if (order.PaymentStatus == "Pending")
                                    {
                                        <span class="badge bg-warning">Chờ thanh toán</span>
                                    }
                                    else if (order.PaymentStatus == "Partial")
                                    {
                                        <span class="badge bg-info">Thanh toán một phần</span>
                                    }
                                    else if (order.PaymentStatus == "Overdue")
                                    {
                                        <span class="badge bg-danger">Quá hạn</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@order.PaymentStatus</span>
                                    }
                                </td>
                                <td>
                                    @if (order.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Hoàn thành</span>
                                    }
                                    else if (order.Status == "Delivered")
                                    {
                                        <span class="badge bg-primary">Đã giao hàng</span>
                                    }
                                    else if (order.Status == "Pending")
                                    {
                                        <span class="badge bg-warning">Chờ xử lý</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@order.Status</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

