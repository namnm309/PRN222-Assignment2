@model List<DataAccessLayer.Entities.Order>
@{
    ViewData["Title"] = "Báo cáo doanh số EVM";
    Layout = "_DashboardLayout";
}

<h2 class="mb-4">Báo cáo doanh số theo khu vực và đại lý</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Bộ lọc báo cáo</h5>
    </div>
    <div class="card-body">
        <form asp-action="SalesReport" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label for="regionId" class="form-label">Khu vực</label>
                    <select id="regionId" name="regionId" class="form-select">
                        <option value="">Tất cả khu vực</option>
                        @if (ViewBag.Regions != null)
                        {
                            @foreach (var region in (List<DataAccessLayer.Entities.Region>)ViewBag.Regions)
                            {
                                <option value="@region.Id" selected="@(ViewBag.RegionId?.ToString() == region.Id.ToString())">@region.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="dealerId" class="form-label">Đại lý</label>
                    <select id="dealerId" name="dealerId" class="form-select">
                        <option value="">Tất cả đại lý</option>
                        @if (ViewBag.Dealers != null)
                        {
                            @foreach (var dealer in (List<DataAccessLayer.Entities.Dealer>)ViewBag.Dealers)
                            {
                                <option value="@dealer.Id" selected="@(ViewBag.DealerId?.ToString() == dealer.Id.ToString())">@dealer.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="period" class="form-label">Kỳ báo cáo</label>
                    <select id="period" name="period" class="form-select">
                        <option value="monthly" selected="@(ViewBag.Period == "monthly")">Hàng tháng</option>
                        <option value="quarterly" selected="@(ViewBag.Period == "quarterly")">Hàng quý</option>
                        <option value="yearly" selected="@(ViewBag.Period == "yearly")">Hàng năm</option>
                    </select>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Xem báo cáo</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng doanh số</p>
                <h3 class="mb-0 text-success">@(ViewBag.TotalSales?.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) ?? "0 VNĐ")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng số đơn hàng</p>
                <h3 class="mb-0 text-primary">@Model.Count</h3>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Doanh số trung bình/đơn</p>
                <h3 class="mb-0 text-info">@((Model.Count > 0 ? Model.Average(x => x.FinalAmount) : 0).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")))</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Chi tiết báo cáo doanh số</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Số đơn hàng</th>
                        <th>Khu vực</th>
                        <th>Đại lý</th>
                        <th>Khách hàng</th>
                        <th>Sản phẩm</th>
                        <th>Giá gốc</th>
                        <th>Giảm giá</th>
                        <th>Thành tiền</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@(item.Region?.Name ?? "N/A")</td>
                            <td>@(item.Dealer?.Name ?? "N/A")</td>
                            <td>@(item.Customer?.FullName ?? "N/A")</td>
                            <td>@(item.Product?.Name ?? "N/A")</td>
                            <td>@item.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td>@item.Discount.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td>@item.FinalAmount.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td>@(item.OrderDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td><span class="badge @(item.Status == "Completed" ? "bg-success" : (item.Status == "Pending" ? "bg-warning" : "bg-secondary"))">@item.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Không có dữ liệu doanh số để hiển thị.</p>
        }
    </div>
</div>