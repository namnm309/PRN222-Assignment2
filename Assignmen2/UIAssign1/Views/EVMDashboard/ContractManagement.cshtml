@model List<DataAccessLayer.Entities.DealerContract>
@{
    ViewData["Title"] = "Quản lý hợp đồng đại lý EVM";
    Layout = "_DashboardLayout";
}

<h2 class="mb-4">Quản lý hợp đồng, chỉ tiêu doanh số và công nợ đại lý</h2>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Bộ lọc</h5>
    </div>
    <div class="card-body">
        <form asp-action="ContractManagement" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="dealerId" class="form-label">Đại lý</label>
                    <select id="dealerId" name="dealerId" class="form-select">
                        <option value="">Tất cả đại lý</option>
                        @if (ViewBag.Dealers != null)
                        {
                            @foreach (var dealer in (List<DataAccessLayer.Entities.Dealer>)ViewBag.Dealers)
                            {
                                <option value="@dealer.Id" selected="@(ViewBag.DealerId?.ToString() == dealer.Id.ToString())">@dealer.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="status" class="form-label">Trạng thái hợp đồng</label>
                    <select id="status" name="status" class="form-select">
                        <option value="">Tất cả</option>
                        <option value="Active" selected="@(ViewBag.Status == "Active")">Đang hoạt động</option>
                        <option value="Expired" selected="@(ViewBag.Status == "Expired")">Hết hạn</option>
                        <option value="Terminated" selected="@(ViewBag.Status == "Terminated")">Đã chấm dứt</option>
                    </select>
                </div>
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Xem báo cáo</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng số hợp đồng đang hoạt động</p>
                <h3 class="mb-0 text-primary">@Model.Count(x => x.Status == "Active")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng số hợp đồng hết hạn</p>
                <h3 class="mb-0 text-warning">@Model.Count(x => x.Status == "Expired")</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <p class="text-muted mb-1 small">Tổng công nợ đại lý</p>
                <h3 class="mb-0 text-danger">@Model.Sum(x => x.OutstandingDebt).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</h3>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Danh sách hợp đồng đại lý</h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Đại lý</th>
                        <th>Mã đại lý</th>
                        <th>Số hợp đồng</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Tỷ lệ hoa hồng</th>
                        <th>Hạn mức tín dụng</th>
                        <th>Công nợ</th>
                        <th>Trạng thái</th>
                        <th>Mức độ rủi ro</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var riskLevel = item.OutstandingDebt > item.CreditLimit * 0.8m ? "Cao" : 
                                       (item.OutstandingDebt > item.CreditLimit * 0.5m ? "Trung bình" : "Thấp");
                        var riskClass = riskLevel == "Cao" ? "bg-danger" : (riskLevel == "Trung bình" ? "bg-warning" : "bg-success");
                        var statusClass = item.Status == "Active" ? "bg-success" : (item.Status == "Expired" ? "bg-warning" : "bg-danger");
                        
                        <tr>
                            <td>@(item.Dealer?.Name ?? "N/A")</td>
                            <td>@(item.Dealer?.DealerCode ?? "N/A")</td>
                            <td>@item.ContractNumber</td>
                            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.CommissionRate.ToString("P1")</td>
                            <td>@item.CreditLimit.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td>@item.OutstandingDebt.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</td>
                            <td><span class="badge @statusClass">@item.Status</span></td>
                            <td><span class="badge @riskClass">@riskLevel</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">Không có dữ liệu hợp đồng để hiển thị.</p>
        }
    </div>
</div>