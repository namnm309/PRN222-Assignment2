<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VinFast Electric Vehicles</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>body{font-family:'Inter',sans-serif}</style>
    </head>
<body>
    <header class="homepage-header">
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
            <div class="container-fluid px-lg-5">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-page="/Home/Index">
                    <div class="brand-logo-home me-2">
                        <i class="fas fa-charging-station"></i>
                    </div>
                    <span class="brand-text-gradient">EVMXanh</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Index">
                                <i class="fas fa-info-circle me-1"></i> Giới thiệu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Privacy">
                                <i class="fas fa-car me-1"></i> Ô Tô
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Privacy">
                                <i class="fas fa-motorcycle me-1"></i> Xe Máy Điện
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Privacy">
                                <i class="fas fa-box me-1"></i> Phụ Kiện Xe
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Privacy">
                                <i class="fas fa-tools me-1"></i> Dịch Vụ Hậu Mãi
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Privacy">
                                <i class="fas fa-bolt me-1"></i> Pin & Trạm Sạc
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern px-3" asp-area="" asp-page="/Home/Privacy">
                                <i class="fas fa-battery-full me-1"></i> Lưu trữ năng lượng
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center gap-2">
                        @{
                            var fullName = Context.Session.GetString("UserFullName");
                            var userRole = Context.Session.GetString("UserRole");
                        }
                        @if (!string.IsNullOrEmpty(fullName))
                        {
                            <div class="user-welcome-badge">
                                <i class="fas fa-user-circle me-1"></i>
                                <span class="fw-semibold">@fullName</span>
                            </div>
                            <a asp-page="/Dashboard/Index" class="btn btn-sm btn-primary rounded-pill px-3">
                                <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                            </a>
                            <a asp-page="/Account/Logout" class="btn btn-sm btn-outline-danger rounded-pill px-3" onclick="return confirm('Bạn có chắc chắn muốn đăng xuất?')">
                                <i class="fas fa-sign-out-alt me-1"></i> Đăng xuất
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-outline-primary rounded-pill px-3" asp-area="" asp-page="/Account/Login">
                                <i class="fas fa-user me-1"></i> Tài khoản
                            </a>
                        }
                        <a class="btn btn-sm btn-primary rounded-pill px-4 fw-semibold" asp-area="" asp-page="/Home/All">
                            <i class="fas fa-calendar-check me-1"></i> Đăng ký lái thử
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @await RenderSectionAsync("FullWidthTop", required: false)
        @await RenderSectionAsync("FullWidthContent", required: false)
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="vf-footer-modern border-top mt-5">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-12 col-lg-6 col-xl-5">
                    <div class="mb-3 d-flex align-items-center gap-2">
                        <div class="brand-logo-footer">
                            <i class="fas fa-charging-station"></i>
                        </div>
                        <div class="fw-bold fs-3 brand-text-gradient">EVMXanh</div>
                    </div>
                    <p class="mb-2 text-muted">Công ty TNHH Kinh doanh Thương mại và Dịch vụ EVMXanh</p>
                    <p class="mb-2 text-muted small"><span class="fw-semibold text-dark">MST/MSDN:</span> 0108926276 do Sở KHĐT TP Hà Nội cấp lần đầu ngày 01/10/2019 và các lần thay đổi tiếp theo.</p>
                    <p class="mb-3 text-muted small"><span class="fw-semibold text-dark">Địa chỉ trụ sở chính:</span> Số 7, Đường Bằng Lăng 1, Khu đô thị Vinhomes Riverside, Phường Việt Hưng, Thành phố Hà Nội, Việt Nam</p>
                </div>

                <div class="col-12 col-md-6 col-lg-3">
                    <h6 class="fw-bold mb-3 text-dark">Liên kết nhanh</h6>
                    <ul class="list-unstyled mb-0 footer-links">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted"><i class="fas fa-chevron-right me-2"></i> Về EVMXanh</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted"><i class="fas fa-chevron-right me-2"></i> Về Vingroup</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted"><i class="fas fa-chevron-right me-2"></i> Tin tức</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted"><i class="fas fa-chevron-right me-2"></i> Showroom & Đại lý</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-muted"><i class="fas fa-chevron-right me-2"></i> Điều khoản chính sách</a></li>
                    </ul>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3 text-dark"><i class="fas fa-headset me-2 text-primary"></i> Dịch vụ khách hàng</h6>
                        <div class="contact-item mb-2"><i class="fas fa-phone-alt text-primary me-2"></i><a class="text-decoration-none text-muted fw-semibold" href="tel:1900232389">1900 23 23 89</a></div>
                        <div class="contact-item mb-3"><i class="fas fa-envelope text-primary me-2"></i><a class="text-decoration-none text-muted" href="mailto:support.vn@EVMXanh.com">support.vn@vinfastauto.com</a></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>