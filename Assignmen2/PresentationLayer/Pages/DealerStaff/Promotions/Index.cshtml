@page
@model PresentationLayer.Pages.DealerStaff.Promotions.IndexModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Quản lý khuyến mãi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-gift me-2 text-primary"></i>
            Quản lý khuyến mãi
        </h2>
        <p class="text-muted mb-0">Quản lý các chương trình khuyến mãi và ưu đãi</p>
    </div>
    <div>
        <a asp-page="/DealerStaff/Promotions/Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Tạo khuyến mãi
        </a>
    </div>
</div>

<!-- Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Tên khuyến mãi...">
            </div>
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="status" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Active" selected="@(Model.Status == "Active")">Đang hoạt động</option>
                    <option value="Inactive" selected="@(Model.Status == "Inactive")">Không hoạt động</option>
                    <option value="Expired" selected="@(Model.Status == "Expired")">Hết hạn</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Loại khuyến mãi</label>
                <select name="type" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Discount" selected="@(Model.Type == "Discount")">Giảm giá</option>
                    <option value="Gift" selected="@(Model.Type == "Gift")">Tặng quà</option>
                    <option value="Installment" selected="@(Model.Type == "Installment")">Trả góp</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Promotions List -->
@if (Model.Promotions != null && Model.Promotions.Any())
{
    <div class="row g-4">
        @foreach (var promotion in Model.Promotions)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card ev-card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h5 class="card-title mb-0">@promotion.title</h5>
                            @{
                                var statusClass = promotion.IsActive ? "bg-success" : "bg-secondary";
                                var statusText = promotion.IsActive ? "Hoạt động" : "Không hoạt động";
                            }
                            <span class="badge @statusClass">@statusText</span>
                        </div>
                        
                        <p class="card-text text-muted mb-3">@promotion.description</p>
                        
                        <div class="row g-2 mb-3">
                            <div class="col-6">
                                <div class="text-muted small">Ngày tạo</div>
                                <div class="fw-bold">@promotion.CreatedAt.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="col-6">
                                <div class="text-muted small">Cập nhật</div>
                                <div class="fw-bold">@promotion.UpdatedAt.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-page="/DealerStaff/Promotions/Detail" asp-route-id="@promotion.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i> Xem chi tiết
                            </a>
                            <a asp-page="/DealerStaff/Promotions/Edit" asp-route-id="@promotion.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit me-1"></i> Chỉnh sửa
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Statistics -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Tổng khuyến mãi</div>
                    <div class="h4 text-primary">@Model.Promotions.Count</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Đang hoạt động</div>
                    <div class="h4 text-success">@Model.Promotions.Count(p => p.IsActive)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Khuyến mãi mới</div>
                    <div class="h4 text-warning">@Model.Promotions.Count(p => p.CreatedAt >= DateTime.Now.AddDays(-7))</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Tổng khuyến mãi</div>
                    <div class="h4 text-info">@Model.Promotions.Count</div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-gift fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Không có khuyến mãi nào</h5>
        <p class="text-muted">Chưa có chương trình khuyến mãi nào được tạo</p>
        <a asp-page="/DealerStaff/Promotions/Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Tạo khuyến mãi đầu tiên
        </a>
    </div>
}
