@page
@model PresentationLayer.Pages.DealerStaff.VehicleQuery.IndexModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Truy vấn thông tin xe";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-car me-2 text-primary"></i>
            Truy vấn thông tin xe
        </h2>
        <p class="text-muted mb-0">Xem danh mục, cấu hình, giá bán, so sánh mẫu xe</p>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Tên xe, SKU, hãng...">
            </div>
            <div class="col-md-3">
                <label class="form-label">Hãng xe</label>
                <select name="brandId" class="form-select">
                    <option value="">Tất cả hãng</option>
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Id" selected="@(Model.BrandId == brand.Id)">@brand.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Giá từ</label>
                <input type="number" name="minPrice" value="@Model.MinPrice" class="form-control" placeholder="0">
            </div>
            <div class="col-md-2">
                <label class="form-label">Giá đến</label>
                <input type="number" name="maxPrice" value="@Model.MaxPrice" class="form-control" placeholder="0">
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products Grid -->
@if (Model.Products != null && Model.Products.Any())
{
    <div class="row g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card ev-card h-100 border-0 shadow-sm">
                    <div class="ev-card-img">
                        @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="placeholder-img d-flex align-items-center justify-content-center text-muted" style="height: 200px; background-color: #f8f9fa; border-bottom: 1px solid #dee2e6;">
                                <div class="text-center">
                                    <i class="fas fa-car fa-2x mb-2"></i>
                                    <div class="small">@product.Name</div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@product.Name</h5>
                            <span class="badge bg-primary">@product.Brand?.Name</span>
                        </div>
                        <div class="text-muted small mb-2">SKU: @product.Sku</div>
                        <p class="card-text text-truncate-2">@product.Description</p>
                        
                        <div class="mt-auto">
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <div class="text-muted small">Giá bán</div>
                                    <div class="fw-bold text-primary fs-5">@product.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))</div>
                                </div>
                                <div class="col-6">
                                    <div class="text-muted small">Tồn kho</div>
                                    <div class="fw-bold @(product.StockQuantity > 0 ? "text-success" : "text-danger")">
                                        @product.StockQuantity xe
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a asp-page="/DealerStaff/VehicleQuery/Detail" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i> Xem chi tiết
                                </a>
                                <a asp-page="/DealerStaff/VehicleQuery/Compare" asp-route-ids="@product.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-balance-scale me-1"></i> So sánh
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-search fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Không tìm thấy sản phẩm nào</h5>
        <p class="text-muted">Hãy thử thay đổi điều kiện tìm kiếm</p>
    </div>
}

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Product pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.CurrentPage - 1)&search=@Model.Search&brandId=@Model.BrandId&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice">Trước</a>
                </li>
            }
            
            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?page=@i&search=@Model.Search&brandId=@Model.BrandId&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice">@i</a>
                </li>
            }
            
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?page=@(Model.CurrentPage + 1)&search=@Model.Search&brandId=@Model.BrandId&minPrice=@Model.MinPrice&maxPrice=@Model.MaxPrice">Sau</a>
                </li>
            }
        </ul>
    </nav>
}
