@page
@model PresentationLayer.Pages.DealerStaff.Customers.IndexModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Quản lý khách hàng";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-users me-2 text-primary"></i>
            Quản lý khách hàng
        </h2>
        <p class="text-muted mb-0">Lưu trữ và quản lý hồ sơ khách hàng</p>
    </div>
    <div>
        <a asp-page="/DealerStaff/Customers/Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm khách hàng
        </a>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Tìm kiếm</label>
                <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Tên, email, số điện thoại...">
            </div>
            <div class="col-md-3">
                <label class="form-label">Trạng thái</label>
                <select name="status" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="Active" selected="@(Model.Status == "Active")">Hoạt động</option>
                    <option value="Inactive" selected="@(Model.Status == "Inactive")">Không hoạt động</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Sắp xếp</label>
                <select name="sortBy" class="form-select">
                    <option value="Name" selected="@(Model.SortBy == "Name")">Tên A-Z</option>
                    <option value="NameDesc" selected="@(Model.SortBy == "NameDesc")">Tên Z-A</option>
                    <option value="CreatedDateDesc" selected="@(Model.SortBy == "CreatedDateDesc")">Mới nhất</option>
                    <option value="CreatedDate" selected="@(Model.SortBy == "CreatedDate")">Cũ nhất</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Customers List -->
@if (Model.Customers != null && Model.Customers.Any())
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Khách hàng</th>
                            <th>Liên hệ</th>
                            <th>Địa chỉ</th>
                            <th>Trạng thái</th>
                            <th>Ngày tạo</th>
                            <th width="120">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model.Customers)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                            @customer.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold">@customer.FullName</div>
                                            @if (!string.IsNullOrWhiteSpace(customer.Name))
                                            {
                                                <div class="text-muted small">@customer.Name</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        @if (!string.IsNullOrWhiteSpace(customer.PhoneNumber))
                                        {
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="fas fa-phone text-muted me-2"></i>
                                                <span>@customer.PhoneNumber</span>
                                            </div>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(customer.Email))
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-envelope text-muted me-2"></i>
                                                <span class="text-muted small">@customer.Email</span>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(customer.Address))
                                    {
                                        <div class="text-muted small" style="max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="@customer.Address">
                                            <i class="fas fa-map-marker-alt me-1"></i>
                                            @customer.Address
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-success">Hoạt động</span>
                                </td>
                                <td>
                                    <div class="text-muted small">@customer.CreatedAt.ToString("dd/MM/yyyy")</div>
                                </td>
                                <td>
                                    <div class="btn-group-vertical btn-group-sm" role="group">
                                        <a asp-page="/DealerStaff/Customers/Detail" asp-route-id="@customer.Id" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="/DealerStaff/Customers/Edit" asp-route-id="@customer.Id" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="/DealerStaff/Orders/Create" asp-route-customerId="@customer.Id" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Tổng khách hàng</div>
                    <div class="h4 text-primary">@Model.TotalItems</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Khách hàng mới tháng này</div>
                    <div class="h4 text-success">@Model.Customers.Count(c => c.CreatedAt.Month == DateTime.Now.Month)</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Có email</div>
                    <div class="h4 text-info">@Model.Customers.Count(c => !string.IsNullOrWhiteSpace(c.Email))</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="text-muted small">Có địa chỉ</div>
                    <div class="h4 text-warning">@Model.Customers.Count(c => !string.IsNullOrWhiteSpace(c.Address))</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Customer pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)&search=@Model.Search&status=@Model.Status&sortBy=@Model.SortBy">Trước</a>
                    </li>
                }
                
                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@Model.Search&status=@Model.Status&sortBy=@Model.SortBy">@i</a>
                    </li>
                }
                
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)&search=@Model.Search&status=@Model.Status&sortBy=@Model.SortBy">Sau</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="text-center py-5">
        <i class="fas fa-users fa-3x text-muted mb-3"></i>
        <h5 class="text-muted">Không có khách hàng nào</h5>
        <p class="text-muted">Chưa có khách hàng nào được thêm vào hệ thống</p>
        <a asp-page="/DealerStaff/Customers/Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Thêm khách hàng đầu tiên
        </a>
    </div>
}
