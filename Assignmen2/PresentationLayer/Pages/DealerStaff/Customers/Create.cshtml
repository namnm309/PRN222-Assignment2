@page
@model PresentationLayer.Pages.DealerStaff.Customers.CreateModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Thêm khách hàng mới";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-user-plus me-2 text-primary"></i>
            Thêm khách hàng mới
        </h2>
        <p class="text-muted mb-0">Tạo hồ sơ khách hàng mới</p>
    </div>
    <div>
        <a asp-page="/DealerStaff/Customers/Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12 col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form method="post">
                    <div class="row g-3">
                        <!-- Personal Information -->
                        <div class="col-12">
                            <h5 class="mb-3">
                                <i class="fas fa-user me-2"></i>
                                Thông tin cá nhân
                            </h5>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="Input.FullName" class="form-control" placeholder="Nhập họ và tên đầy đủ">
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.Name" class="form-label">Tên gọi</label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Tên thường gọi (không bắt buộc)">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <!-- Contact Information -->
                        <div class="col-12">
                            <h5 class="mb-3 mt-4">
                                <i class="fas fa-phone me-2"></i>
                                Thông tin liên hệ
                            </h5>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại">
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Nhập địa chỉ email">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <!-- Address Information -->
                        <div class="col-12">
                            <h5 class="mb-3 mt-4">
                                <i class="fas fa-map-marker-alt me-2"></i>
                                Địa chỉ
                            </h5>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.Address" class="form-label">Địa chỉ</label>
                            <textarea asp-for="Input.Address" class="form-control" rows="3" placeholder="Nhập địa chỉ chi tiết"></textarea>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <!-- Additional Information -->
                        <div class="col-12">
                            <h5 class="mb-3 mt-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Thông tin bổ sung
                            </h5>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.Notes" class="form-label">Ghi chú</label>
                            <textarea asp-for="Input.Notes" class="form-control" rows="3" placeholder="Ghi chú về khách hàng..."></textarea>
                            <span asp-validation-for="Input.Notes" class="text-danger"></span>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="col-12">
                            <hr>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-1"></i> Tạo khách hàng
                                </button>
                                <a asp-page="/DealerStaff/Customers/Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-1"></i> Hủy
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <!-- Quick Actions -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>
                    Thao tác nhanh
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <button type="button" class="btn btn-outline-primary" onclick="fillSampleData()">
                        <i class="fas fa-magic me-1"></i> Điền dữ liệu mẫu
                    </button>
                    <button type="button" class="btn btn-outline-secondary" onclick="clearForm()">
                        <i class="fas fa-eraser me-1"></i> Xóa tất cả
                    </button>
                </div>
            </div>
        </div>

        <!-- Instructions -->
        <div class="card border-0 shadow-sm mt-3">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Hướng dẫn
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Họ và tên là thông tin bắt buộc
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Số điện thoại hoặc email ít nhất một cái
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-2"></i>
                        Có thể thêm ghi chú về khách hàng
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check text-success me-2"></i>
                        Có thể tạo đơn hàng ngay sau khi tạo
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function fillSampleData() {
            document.querySelector('input[name="Input.FullName"]').value = 'Nguyễn Văn A';
            document.querySelector('input[name="Input.Name"]').value = 'Anh A';
            document.querySelector('input[name="Input.PhoneNumber"]').value = '0901234567';
            document.querySelector('input[name="Input.Email"]').value = 'nguyenvana@email.com';
            document.querySelector('textarea[name="Input.Address"]').value = '123 Đường ABC, Quận 1, TP.HCM';
            document.querySelector('textarea[name="Input.Notes"]').value = 'Khách hàng tiềm năng, quan tâm đến xe điện';
        }

        function clearForm() {
            if (confirm('Bạn có chắc muốn xóa tất cả dữ liệu đã nhập?')) {
                document.querySelector('form').reset();
            }
        }
    </script>
}
