@page
@model Assignmen2.PresentationLayer.Pages.DealerStaff.Customers.DetailModel
@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-0">
            <i class="fas fa-user text-primary me-2"></i>
            Chi tiết khách hàng
        </h4>
        <p class="text-muted mb-0">Thông tin chi tiết về khách hàng</p>
    </div>
    <div>
        <a asp-page="/DealerStaff/Customers/Index" class="btn btn-outline-secondary me-2">
            <i class="fas fa-arrow-left me-1"></i>
            Quay lại
        </a>
        <a asp-page="/DealerStaff/Customers/Edit" asp-route-id="@Model.Customer.Id" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i>
            Chỉnh sửa
        </a>
    </div>
</div>

@if (Model.Customer != null)
{
    <div class="row">
        <!-- Thông tin chính -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-primary me-2"></i>
                        Thông tin khách hàng
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">ID Khách hàng</label>
                                <div class="form-control-plaintext">@Model.Customer.Id</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Trạng thái</label>
                                <div>
                                    @{
                                        var statusClass = Model.Customer.IsActive ? "bg-success" : "bg-danger";
                                        var statusText = Model.Customer.IsActive ? "Hoạt động" : "Không hoạt động";
                                    }
                                    <span class="badge @statusClass fs-6">@statusText</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Họ và tên</label>
                                <div class="form-control-plaintext">
                                    <i class="fas fa-user text-primary me-1"></i>
                                    @Model.Customer.FullName
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Số điện thoại</label>
                                <div class="form-control-plaintext">
                                    <i class="fas fa-phone text-primary me-1"></i>
                                    <a href="tel:@Model.Customer.PhoneNumber" class="text-decoration-none">
                                        @Model.Customer.PhoneNumber
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Email</label>
                                <div class="form-control-plaintext">
                                    <i class="fas fa-envelope text-primary me-1"></i>
                                    @if (!string.IsNullOrWhiteSpace(Model.Customer.Email))
                                    {
                                        <a href="mailto:@Model.Customer.Email" class="text-decoration-none">
                                            @Model.Customer.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold text-muted">Ngày tạo</label>
                                <div class="form-control-plaintext">
                                    <i class="fas fa-calendar text-primary me-1"></i>
                                    @Model.Customer.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Customer.Address))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Địa chỉ</label>
                            <div class="form-control-plaintext bg-light p-3 rounded">
                                <i class="fas fa-map-marker-alt text-primary me-1"></i>
                                @Model.Customer.Address
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Thông tin bổ sung -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar text-success me-2"></i>
                        Thống kê
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold text-muted">Thông tin bổ sung</label>
                        <div class="form-control-plaintext">
                            <i class="fas fa-info-circle text-success me-1"></i>
                            Khách hàng đã đăng ký
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Không tìm thấy thông tin khách hàng.
    </div>
}
