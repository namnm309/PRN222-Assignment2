@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleOrderType() {
            const orderType = document.querySelector('select[name="Input.OrderType"]').value;
            const paymentSection = document.getElementById('paymentSection');
            const paymentMethodDiv = document.getElementById('paymentMethodDiv');
            const paymentDueDateDiv = document.getElementById('paymentDueDateDiv');

            if (orderType === 'Order' || orderType === 'Contract') {
                paymentSection.style.display = 'block';
                paymentMethodDiv.style.display = 'block';
                paymentDueDateDiv.style.display = 'block';
            } else {
                paymentSection.style.display = 'none';
                paymentMethodDiv.style.display = 'none';
                paymentDueDateDiv.style.display = 'none';
            }
        }

        function loadCustomerInfo() {
            // TODO: Load customer information when selected
        }

        function loadProductInfo() {
            const productSelect = document.getElementById('product-select');
            const selectedOption = productSelect.options[productSelect.selectedIndex];
            
            if (selectedOption.value) {
                const price = selectedOption.dataset.price;
                const stock = selectedOption.dataset.stock;
                
                document.querySelector('input[name="Input.Price"]').value = price;
                calculateTotal();
                updateOrderSummary();
                
                // Check stock availability
                checkProductStock(selectedOption.value);
            } else {
                document.getElementById('stock-alert').style.display = 'none';
            }
        }

        // Function to check product stock via AJAX
        function checkProductStock(productId) {
            var stockAlert = document.getElementById('stock-alert');
            
            // Show loading
            stockAlert.innerHTML = '<div class="spinner-border spinner-border-sm" role="status"><span class="visually-hidden">Loading...</span></div> ƒêang ki·ªÉm tra t·ªìn kho...';
            stockAlert.style.display = 'block';
            
            fetch('/DealerStaff/Orders/Create?handler=GetProductStock&productId=' + productId)
                .then(response => response.json())
                .then(data => {
                    if (!data.success) {
                        stockAlert.innerHTML = '<div class="alert alert-danger mb-0"><i class="fas fa-exclamation-circle"></i> ' + data.message + '</div>';
                        return;
                    }

                    if (!data.hasStock) {
                        stockAlert.innerHTML = `
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-exclamation-triangle"></i> ${data.message}
                                <br><small>B·∫°n c√≥ th·ªÉ ƒë·∫∑t h√†ng t·ª´ h√£ng t·∫°i menu <strong>"ƒê·∫∑t xe t·ª´ h√£ng"</strong></small>
                            </div>`;
                    } else if (data.availableQuantity <= data.minimumStock) {
                        stockAlert.innerHTML = `
                            <div class="alert alert-warning mb-0">
                                <i class="fas fa-warehouse"></i> ${data.message}
                                <br><small class="text-danger">‚ö†Ô∏è T·ªìn kho th·∫•p (t·ªëi thi·ªÉu: ${data.minimumStock} xe). N√™n ƒë·∫∑t h√†ng th√™m!</small>
                            </div>`;
                    } else {
                        if (data.isEVMStock) {
                            // T·ªìn kho EVM (ch∆∞a ph√¢n b·ªï cho ƒë·∫°i l√Ω)
                            stockAlert.innerHTML = `
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle"></i> ${data.message}
                                    <br><small class="text-info">üí° ƒê√¢y l√† t·ªìn kho EVM. Li√™n h·ªá EVM ƒë·ªÉ ph√¢n b·ªï cho ƒë·∫°i l√Ω.</small>
                                </div>`;
                        } else {
                            // T·ªìn kho ƒë√£ ph√¢n b·ªï cho ƒë·∫°i l√Ω
                            stockAlert.innerHTML = `
                                <div class="alert alert-success mb-0">
                                    <i class="fas fa-check-circle"></i> ${data.message}
                                    <br><small>ƒê√£ ph√¢n b·ªï: ${data.allocatedQuantity} | ƒê√£ ƒë·∫∑t: ${data.reservedQuantity}</small>
                                </div>`;
                        }
                    }
                })
                .catch(error => {
                    stockAlert.innerHTML = '<div class="alert alert-danger mb-0"><i class="fas fa-times-circle"></i> Kh√¥ng th·ªÉ ki·ªÉm tra t·ªìn kho</div>';
                });
        }

        function calculateTotal() {
            const price = parseFloat(document.querySelector('input[name="Input.Price"]').value) || 0;
            const discount = parseFloat(document.querySelector('input[name="Input.Discount"]').value) || 0;
            const finalAmount = price - discount;
            
            document.getElementById('final-amount-display').textContent = finalAmount.toLocaleString('vi-VN') + ' VNƒê';
            
            updateOrderSummary();
        }

        function updateOrderSummary() {
            const productSelect = document.querySelector('select[name="Input.ProductId"]');
            const selectedOption = productSelect.options[productSelect.selectedIndex];
            const price = parseFloat(document.querySelector('input[name="Input.Price"]').value) || 0;
            const discount = parseFloat(document.querySelector('input[name="Input.Discount"]').value) || 0;
            const finalAmount = price - discount;

            if (selectedOption.value) {
                const orderSummary = document.getElementById('orderSummary');
                orderSummary.innerHTML = `
                    <div class="mb-3">
                        <div class="fw-bold">${selectedOption.textContent}</div>
                        <div class="text-muted small">Gi√°: ${price.toLocaleString('vi-VN', {style: 'currency', currency: 'VND'})}</div>
                        <div class="text-muted small">Gi·∫£m gi√°: ${discount.toLocaleString('vi-VN', {style: 'currency', currency: 'VND'})}</div>
                        <hr>
                        <div class="fw-bold text-primary">Th√†nh ti·ªÅn: ${finalAmount.toLocaleString('vi-VN', {style: 'currency', currency: 'VND'})}</div>
                    </div>
                `;
            }
        }

        // Handle Add Customer
        document.getElementById('saveCustomerBtn').addEventListener('click', function() {
            var form = document.getElementById('addCustomerForm');
            var formData = new FormData(form);
            var errorDiv = document.getElementById('customer-error-message');
            
            // Hide previous errors
            errorDiv.classList.add('d-none');
            
            // Disable button during request
            this.disabled = true;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ƒêang l∆∞u...';
            
            fetch('/DealerStaff/Customers/CreateCustomer', {
                method: 'POST',
                body: formData
