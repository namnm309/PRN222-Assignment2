@page
@model PresentationLayer.Pages.DealerStaff.Orders.EditModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa đơn hàng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1">
            <i class="fas fa-edit me-2 text-primary"></i>
            Chỉnh sửa đơn hàng: @Model.Order?.OrderNumber
        </h2>
        <p class="text-muted mb-0">Cập nhật thông tin đơn hàng</p>
    </div>
    <div>
        <a asp-page="/DealerStaff/Orders/Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Quay lại
        </a>
    </div>
</div>

@if (Model.Order != null)
{
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        Thông tin đơn hàng
                    </h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Order.Id" />
                        <input type="hidden" asp-for="Order.OrderNumber" />
                        <input type="hidden" asp-for="Order.CustomerId" />
                        <input type="hidden" asp-for="Order.ProductId" />
                        <input type="hidden" asp-for="Order.DealerId" />
                        <input type="hidden" asp-for="Order.CreatedAt" />

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số đơn hàng:</label>
                                <div class="form-control-plaintext">@Model.Order.OrderNumber</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Khách hàng:</label>
                                <div class="form-control-plaintext">@Model.Order.CustomerName</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Sản phẩm:</label>
                                <div class="form-control-plaintext">@Model.Order.ProductName</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Loại đơn hàng:</label>
                                <input asp-for="Order.Description" class="form-control" placeholder="Loại đơn hàng" />
                                <span asp-validation-for="Order.Description" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá bán:</label>
                                <input asp-for="Order.Price" type="number" step="0.01" class="form-control" placeholder="Giá bán" />
                                <span asp-validation-for="Order.Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giảm giá:</label>
                                <input asp-for="Order.Discount" type="number" step="0.01" class="form-control" placeholder="Giảm giá" />
                                <span asp-validation-for="Order.Discount" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Thành tiền:</label>
                                <div class="form-control-plaintext fw-bold text-primary fs-5" id="finalAmount">
                                    @Model.Order.FinalAmount.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN"))
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Trạng thái:</label>
                                <select asp-for="Order.Status" class="form-select">
                                    <option value="Quoted">Báo giá</option>
                                    <option value="Confirmed">Đã xác nhận</option>
                                    <option value="Delivered">Đã giao xe</option>
                                    <option value="Contract">Hợp đồng</option>
                                    <option value="Canceled">Đã hủy</option>
                                </select>
                                <span asp-validation-for="Order.Status" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Trạng thái thanh toán:</label>
                                <select asp-for="Order.PaymentStatus" class="form-select">
                                    <option value="Unpaid">Chưa thanh toán</option>
                                    <option value="Partial">Đã cọc</option>
                                    <option value="Paid">Đã thanh toán đủ</option>
                                </select>
                                <span asp-validation-for="Order.PaymentStatus" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Phương thức thanh toán:</label>
                                <input asp-for="Order.PaymentMethod" class="form-control" placeholder="Phương thức thanh toán" />
                                <span asp-validation-for="Order.PaymentMethod" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ngày đặt hàng:</label>
                                <input asp-for="Order.OrderDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Order.OrderDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Ngày giao xe:</label>
                                <input asp-for="Order.DeliveryDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Order.DeliveryDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Hạn thanh toán:</label>
                                <input asp-for="Order.PaymentDueDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="Order.PaymentDueDate" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label fw-bold">Ghi chú:</label>
                                <textarea asp-for="Order.Notes" class="form-control" rows="3" placeholder="Ghi chú về đơn hàng"></textarea>
                                <span asp-validation-for="Order.Notes" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Lưu thay đổi
                            </button>
                            <a asp-page="/DealerStaff/Orders/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Info Panel -->
        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Thông tin đơn hàng
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày tạo:</label>
                        <div class="text-muted">@Model.Order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Cập nhật lần cuối:</label>
                        <div class="text-muted">@Model.Order.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Đại lý:</label>
                        <div class="text-muted">@Model.Order.DealerName</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nhân viên bán hàng:</label>
                        <div class="text-muted">@Model.Order.SalesPersonName</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>
        Không tìm thấy đơn hàng
    </div>
}

@section Scripts {
    <script>
        // Tính toán thành tiền tự động
        document.addEventListener('DOMContentLoaded', function() {
            const priceInput = document.querySelector('input[name="Order.Price"]');
            const discountInput = document.querySelector('input[name="Order.Discount"]');
            const finalAmountDiv = document.getElementById('finalAmount');

            function calculateFinalAmount() {
                const price = parseFloat(priceInput.value) || 0;
                const discount = parseFloat(discountInput.value) || 0;
                const finalAmount = price - discount;
                
                if (finalAmount >= 0) {
                    finalAmountDiv.textContent = new Intl.NumberFormat('vi-VN', {
                        style: 'currency',
                        currency: 'VND'
                    }).format(finalAmount);
                } else {
                    finalAmountDiv.textContent = '0 ₫';
                }
            }

            priceInput.addEventListener('input', calculateFinalAmount);
            discountInput.addEventListener('input', calculateFinalAmount);
        });
    </script>
}
