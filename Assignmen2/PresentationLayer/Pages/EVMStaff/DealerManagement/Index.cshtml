@page
@model PresentationLayer.Pages.EVMStaff.DealerManagement.IndexModel
@{
    ViewData["Title"] = "Quản lý đại lý";
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
}

<!-- Header Section -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <div class="card-body text-white p-4">
                <div class="d-flex align-items-center justify-content-between">
                    <div>
                        <h2 class="mb-2 fw-bold">
                            <i class="fas fa-store me-2"></i>
                            Quản lý đại lý
                        </h2>
                        <p class="mb-0 opacity-75">Quản lý hệ thống đại lý và đối tác</p>
                    </div>
                    <div>
                        <a class="btn btn-light btn-lg" asp-page="/EVMStaff/DealerManagement/Create">
                            <i class="fas fa-plus me-2"></i>Thêm đại lý
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <div class="card-body text-white text-center">
                <div class="p-3 bg-white bg-opacity-25 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-store fs-2"></i>
                </div>
                <h3 class="mb-1 fw-bold">@Model.Dealers.Count</h3>
                <p class="mb-0 opacity-75">Tổng đại lý</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="card-body text-white text-center">
                <div class="p-3 bg-white bg-opacity-25 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-check-circle fs-2"></i>
                </div>
                <h3 class="mb-1 fw-bold">@Model.Dealers.Count(d => d.IsActive)</h3>
                <p class="mb-0 opacity-75">Đang hoạt động</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="card-body text-white text-center">
                <div class="p-3 bg-white bg-opacity-25 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-pause-circle fs-2"></i>
                </div>
                <h3 class="mb-1 fw-bold">@Model.Dealers.Count(d => !d.IsActive)</h3>
                <p class="mb-0 opacity-75">Ngừng hoạt động</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="card-body text-white text-center">
                <div class="p-3 bg-white bg-opacity-25 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-map-marker-alt fs-2"></i>
                </div>
                <h3 class="mb-1 fw-bold">@Model.Dealers.Select(d => d.RegionName).Distinct().Count()</h3>
                <p class="mb-0 opacity-75">Khu vực</p>
            </div>
        </div>
    </div>
</div>

<!-- Search & Filter Card -->
<div class="card border-0 shadow-sm mb-4">
    <div class="card-header bg-white border-0 py-3">
        <h5 class="mb-0"><i class="fas fa-filter me-2 text-primary"></i>Bộ lọc tìm kiếm</h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label fw-semibold">
                    <i class="fas fa-search me-1"></i>Tìm kiếm
                </label>
                <input type="text" name="search" class="form-control" placeholder="Tên đại lý, mã đại lý, liên hệ...">
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-map-marker-alt me-1"></i>Khu vực
                </label>
                <select name="region" class="form-select">
                    <option value="">Tất cả</option>
                    @foreach (var region in Model.Dealers.Select(d => d.RegionName).Distinct().Where(r => !string.IsNullOrEmpty(r)))
                    {
                        <option value="@region">@region</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label fw-semibold">
                    <i class="fas fa-toggle-on me-1"></i>Trạng thái
                </label>
                <select name="status" class="form-select">
                    <option value="">Tất cả</option>
                    <option value="active">Đang hoạt động</option>
                    <option value="inactive">Ngừng hoạt động</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Dealers Table -->
<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        @if (Model.Dealers.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Đại lý</th>
                            <th>Khu vực</th>
                            <th>Liên hệ</th>
                            <th>Điện thoại</th>
                            <th>Trạng thái</th>
                            <th class="text-center pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var d in Model.Dealers)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-success text-white me-3">
                                            @(string.IsNullOrEmpty(d.Name) ? "?" : d.Name.Substring(0, 1).ToUpper())
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@(string.IsNullOrWhiteSpace(d.Name) ? "Chưa có tên" : d.Name)</div>
                                            <small class="text-muted">Mã: @(string.IsNullOrWhiteSpace(d.Code) ? "N/A" : d.Code)</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-map-marker-alt me-2 text-muted"></i>
                                        @(string.IsNullOrWhiteSpace(d.RegionName) ? "Chưa xác định" : d.RegionName)
                                    </div>
                                </td>
                                <td>
                                    <div>
                                        <div class="fw-semibold">@(string.IsNullOrWhiteSpace(d.ContactPerson) ? "Chưa có" : d.ContactPerson)</div>
                                        @if (!string.IsNullOrWhiteSpace(d.Email))
                                        {
                                            <small class="text-muted">
                                                <i class="fas fa-envelope me-1"></i>@d.Email
                                            </small>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(d.PhoneNumber))
                                    {
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-phone me-2 text-muted"></i>
                                            @d.PhoneNumber
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa có</span>
                                    }
                                </td>
                                <td>
                                    @if (d.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle me-1"></i>Đang hoạt động
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-pause-circle me-1"></i>Ngừng hoạt động
                                        </span>
                                    }
                                </td>
                                <td class="text-center pe-4">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="/EVMStaff/DealerManagement/Edit" asp-route-id="@d.Id" 
                                           class="btn btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#deleteModal-@d.Id" 
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4">
                    <div class="p-4 rounded-circle d-inline-block" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                        <i class="fas fa-store fa-3x text-white"></i>
                    </div>
                </div>
                <h4 class="text-muted mb-3">Chưa có đại lý nào</h4>
                <p class="text-muted mb-4">Bắt đầu bằng cách thêm đại lý đầu tiên</p>
                <a asp-page="/EVMStaff/DealerManagement/Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>Thêm đại lý đầu tiên
                </a>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modals -->
@foreach (var d in Model.Dealers)
{
    <div class="modal fade" id="deleteModal-@d.Id" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Xác nhận xóa</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn xóa đại lý <strong>@(string.IsNullOrWhiteSpace(d.Name) ? "này" : d.Name)</strong>?</p>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Cảnh báo:</strong> Hành động này không thể hoàn tác!
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@d.Id" style="display: inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


