@page
@model PresentationLayer.Pages.EVMStaff.UserManagement.CreateDealerManagerModel
@{
    Layout = "~/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Tạo Dealer Manager";
}

<h2>Tạo Dealer Manager</h2>

<partial name="~/Pages/Shared/_ValidationScriptsPartial.cshtml" />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Họ và tên</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label class="form-label">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-md-8">
            <label class="form-label">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label">Đại lý</label>
            <select asp-for="DealerId" class="form-select" asp-items="Model.DealerOptions">
                <option value="">-- Chọn đại lý --</option>
            </select>
            <span asp-validation-for="DealerId" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Tạo tài khoản</button>
        <a asp-page="/EVMStaff/UserManagement/Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>


