@page "{id:guid}"
@model PresentationLayer.Pages.DealerManager.PurchaseOrders.DetailModel
@{
    Layout = "/Pages/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Chi tiết đơn đặt xe";
}
<div class="container-fluid">
    <a asp-page="/DealerManager/PurchaseOrders/Index" class="btn btn-sm btn-link mb-3"><i class="fas fa-arrow-left me-1"></i>Quay lại</a>
    <h3 class="fw-bold mb-4"><i class="fas fa-shopping-cart me-2 text-primary"></i>Chi tiết đơn đặt xe #@Model.PurchaseOrder.Id</h3>
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <strong>Sản phẩm:</strong><br />
                    @Model.PurchaseOrder.Product.Name<br />
                    <small class="text-muted">SKU: @Model.PurchaseOrder.Product.Sku</small>
                </div>
                <div class="col-md-4">
                    <strong>Số lượng:</strong><br />
                    @Model.PurchaseOrder.RequestedQuantity xe
                </div>
                <div class="col-md-4">
                    <strong>Trạng thái:</strong><br />
                    <span class="badge bg-info">@Model.PurchaseOrder.Status</span>
                </div>
            </div>
            <hr />
            <div class="row g-3">
                <div class="col-md-6">
                    <strong>Giá đơn vị:</strong> @Model.PurchaseOrder.UnitPrice.ToString("N0") VND
                </div>
                <div class="col-md-6">
                    <strong>Tổng tiền:</strong> <span class="text-success fw-bold">@Model.PurchaseOrder.TotalAmount.ToString("N0") VND</span>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.PurchaseOrder.Reason))
            {
                <hr />
                <div class="row">
                    <div class="col-12">
                        <strong>Lý do đặt xe:</strong><br />
                        <p class="mb-0">@Model.PurchaseOrder.Reason</p>
                    </div>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.PurchaseOrder.Notes))
            {
                <hr />
                <div class="row">
                    <div class="col-12">
                        <strong>Ghi chú:</strong><br />
                        <p class="mb-0">@Model.PurchaseOrder.Notes</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
